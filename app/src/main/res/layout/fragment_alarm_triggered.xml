<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmTriggeredFragment">

    <TextView
        android:id="@+id/alarmtriggered_Message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/alarm_triggered_control_edge_margin"
        android:layout_marginTop="@dimen/alarm_triggered_control_edge_margin"
        android:layout_marginEnd="@dimen/alarm_triggered_control_edge_margin"
        android:layout_marginBottom="@dimen/alarm_triggered_control_edge_margin"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/alarmtriggered_SnoozeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Alarm Message" />

    <Button
        android:id="@+id/alarmtriggered_CancelButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/alarm_triggered_control_edge_margin"
        android:layout_marginEnd="@dimen/alarm_triggered_control_edge_margin"
        android:layout_marginBottom="@dimen/alarm_triggered_control_edge_margin"
        android:height="72sp"
        android:text="@string/alarm_triggered_cancel"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/alarmtriggered_SnoozeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:height="72sp"
        android:text="@string/alarm_triggered_snooze"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/alarmtriggered_CancelButton"
        app:layout_constraintEnd_toEndOf="@+id/alarmtriggered_CancelButton"
        app:layout_constraintStart_toStartOf="@+id/alarmtriggered_CancelButton" />

</androidx.constraintlayout.widget.ConstraintLayout>